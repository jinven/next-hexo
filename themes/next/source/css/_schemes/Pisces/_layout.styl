.header {
  margin: 0 auto;
  position: relative;
  width: $content-desktop;

  +desktop-large() {
    width: $content-desktop-large;
  }

  +desktop-largest() {
    width: $content-desktop-largest;
  }

  +tablet-mobile() {
    width: auto;
  }
}

.header-inner {
  background: white;
  border-radius: $border-radius-inner;
  box-shadow: $box-shadow-inner;
  overflow: hidden;
  padding: 0;
  position: absolute;
  top: 0;
  width: $sidebar-desktop;

  +desktop-large() {
    width: $sidebar-desktop;
  }

  +tablet-mobile() {
    border-radius: initial;
    position: relative;
    width: auto;
  }
}

.main {
  clearfix();
}

.main-inner {
  +tablet-mobile() {
    width: auto;
  }
}

.content-wrap {
  background: white;
  border-radius: $border-radius-inner;
  box-shadow: $box-shadow-inner;
  box-sizing: border-box;
  float: right;
  padding: $content-desktop-padding;
  width: $content-wrap;

  +tablet-mobile() {
    border-radius: initial;
    padding: 20px;
    width: 100%;
  }
}

.sidebar {
  background: $body-bg-color;
  box-shadow: none;
  float: left;
  position: static;
  width: $sidebar-desktop;

  +tablet-mobile() {
    display: none;
  }
}

.sidebar-toggle {
  display: none;
}

if (hexo-config('sidebar.position') == 'right') {
  .header-inner {
    right: 0;
  }

  .content-wrap {
    float: left;
  }

  .sidebar {
    float: right;
  }

  .book-mark-link {
    left: $b2t-position-right;
  }

  .footer-inner {
    padding-right: 260px;
  }
} else {
  .footer-inner {
    padding-left: 260px;
  }

  .back-to-top {
    left: auto;
    right: $b2t-position-right;

    +tablet-mobile() {
      right: $b2t-position-right-mobile;
    }
  }
}

.footer-inner {

  +tablet-mobile() {
    padding-left: 0;
    padding-right: 0;
    width: auto;
  }
}

.night-body {
  background-color: #111;
  color: #aaa;
  a {
    color: #bbb;
  }
  .header-inner {
    background-color: #333;
    .menu-item-active a {
      background-color: #555;
    }
  }
  .post-block {
    background-color: #333;
    .btn {
      background-color: #333;
    }
  }
  .sidebar-inner {
    background-color: #333;
    .night-mode {
      border-color: #555;
    }
  }
  .posts-expand .post-title-link{
    color: #bbb;
  }
  code {
    background-color: #555;
    color: #bbb;
  }
  .highlight{
    background-color:#111;
    pre {
      background-color:#111;
    }
  }
  pre {
    background-color:#111;
  }
  .pagination{
    background-color:#333;
    .current {
      background-color: #555;
    }
  }
}